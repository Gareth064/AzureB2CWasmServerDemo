<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        var claims = context.User.Claims;
                        var userId = claims.Where(c => c.Type == "oid").FirstOrDefault().Value;
                        var workspaceId = context.User.HasClaim(c => c.Type == "workspaceId") ? claims.Where(c => c.Type == "workspaceId").FirstOrDefault().Value : String.Empty;
                        var workspaceOwnerId = context.User.HasClaim(c => c.Type == "workspaceOwnerId") ? claims.Where(c => c.Type == "workspaceOwnerId").FirstOrDefault().Value : String.Empty;
                        var hasValidSubscription = context.User.HasClaim(c => c.Type == "hasValidSubscription") ? true : false;

                        if (String.IsNullOrWhiteSpace(workspaceId))
                        {
                            //TODO: Redirect to the onboarding Page
                            <RedirectToPage Path="setupworkspace" />
                        }

                        if (String.IsNullOrWhiteSpace(workspaceId) == false && (hasValidSubscription == false) && (userId == workspaceOwnerId))
                        {
                            //TODO: Redirect to the subscriptions page
                            <RedirectToPage Path="managesubscription" />
                        }
                        else
                        {
                            //TODO: Redirect to page explaining they arent the owner and what they should do
                            <RedirectToPage Path="inviteduserinfo" />
                        }
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>